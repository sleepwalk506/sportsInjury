<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huali.sportsinjuryandrecovery.mapper.BlogMapper">
    <insert id="addNewBlog">
        insert into blog values(#{blogId},#{userId},#{title},#{content},#{blogDate},#{injuryType})
    </insert>
    <select id="blogList" resultType="com.huali.sportsinjuryandrecovery.pojo.Blog">
        select * from blog
    </select>
    <select id="searchBlogByAuthor" resultType="com.huali.sportsinjuryandrecovery.pojo.Blog">
        select * from blog
        <where>
            userId = #{userId}
        </where>
    </select>
    <select id="searchBlogByInjury" resultType="com.huali.sportsinjuryandrecovery.pojo.Blog">
        select * from blog
        <where>
            injuryType = #{injuryType}
        </where>
    </select>
</mapper>